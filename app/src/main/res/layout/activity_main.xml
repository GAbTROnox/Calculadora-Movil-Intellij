<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/black">
    <Button
            android:text="÷"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnDivision"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintBottom_toTopOf="@+id/btnMultiplicacion" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="#3F66A2"/>
    <Button
            android:text="⌫"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnBorrar"
            android:textSize="28sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintBottom_toTopOf="@+id/btn9"
            app:layout_constraintEnd_toStartOf="@+id/btnMultiplicacion" android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp" android:backgroundTint="#2A272A" android:textColor="#3F66A2"/>
    <Button
            android:text="%"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnPorcentaje"
            android:textSize="34sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/btn8"
            app:layout_constraintEnd_toStartOf="@+id/btnBorrar"
            android:layout_marginBottom="15dp" android:layout_marginEnd="15dp" android:backgroundTint="#2A272A"
            android:textColor="#3F66A2"/>
    <Button
            android:text="C"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnReset"
            android:textSize="34sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/btn7"
            app:layout_constraintEnd_toStartOf="@+id/btnPorcentaje"
            android:layout_marginEnd="15dp" android:layout_marginBottom="15dp" android:fontFamily="sans-serif-light"
            android:backgroundTint="#2A272A" android:textColor="#F44336"/>
    <Button
            android:text="7"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn7"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/btn4"
            app:layout_constraintEnd_toStartOf="@+id/btn8"
            android:layout_marginBottom="15dp" android:layout_marginEnd="15dp" android:backgroundTint="#2A272A"
            android:textColor="@color/white"/>
    <Button
            android:text="8"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn8"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/btn5"
            app:layout_constraintEnd_toStartOf="@+id/btn9" android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp" android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="9"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn9"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/btn6" android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toStartOf="@+id/btnMultiplicacion" android:layout_marginEnd="15dp"
            android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="x"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnMultiplicacion"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintBottom_toTopOf="@+id/btnResta" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="#3F66A2"/>
    <Button
            android:text="-"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnResta"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintBottom_toTopOf="@+id/btnSuma" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="#3F66A2"/>
    <Button
            android:text="6"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn6"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btnIgual" android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toTopOf="@+id/btn3" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="5"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn5"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btnPunto" android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toTopOf="@+id/btn2" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="4"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn4"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btn0" android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toTopOf="@+id/btn1" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="3"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn3"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btnIgual" android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPunto" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="+"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnSuma"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintBottom_toTopOf="@+id/btnIgual" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="#3F66A2"/>
    <Button
            android:text="1"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn1"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btn0" android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toTopOf="@+id/btnMasMenos" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="2"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn2"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btnPunto" android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toTopOf="@+id/btn0" android:layout_marginBottom="15dp"
            android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="0"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btn0"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btnPunto" android:layout_marginEnd="15dp"
            android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="±"
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnMasMenos"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btn0" android:layout_marginEnd="15dp"
            android:backgroundTint="#2A272A" android:textColor="#3F66A2"/>
    <Button
            android:text="."
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnPunto"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/btnIgual" android:layout_marginEnd="15dp"
            android:backgroundTint="#2A272A" android:textColor="@color/white"/>
    <Button
            android:text="="
            android:layout_width="75dp"
            android:layout_height="80dp" android:id="@+id/btnIgual"
            android:textSize="48sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp" app:layout_constraintHorizontal_bias="0.912"
            android:backgroundTint="#3F66A2" android:textColor="#CCDDB7"/>
    <TextView
            android:text="Gabriel Enrique Flores Sanchez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:textColor="#2196F3"/>
</androidx.constraintlayout.widget.ConstraintLayout>